    "@vitest/coverage-v8": "^1.1.3",
    "@vitest/ui": "^1.1.2",
    "autoprefixer": "^10.4.17",
    "cypress": "^13.6.2",
    "eslint": "8.2.0",
    "eslint-config-airbnb": "19.0.4",
